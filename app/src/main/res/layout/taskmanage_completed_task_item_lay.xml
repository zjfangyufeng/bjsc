<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingRight="17.5dp"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:id="@+id/icon_iv"
            android:scaleType="fitXY"
            android:layout_marginRight="12.5dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_tv"
                android:textColor="#383838"
                android:layout_toLeftOf="@+id/newprice_tv"
                android:layout_marginBottom="3dp"
                android:maxLines="2"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/title_tv"
                android:layout_below="@+id/name_tv"
                android:textColor="#ababab"
                android:text="安装体验打开奖励阿阿道夫阿萨德发撒旦法"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:maxLength="14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dget_tv"
                android:layout_below="@+id/name_tv"
                android:layout_toRightOf="@+id/title_tv"
                android:textColor="@color/public_orange"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/name_tv"
                android:layout_toRightOf="@+id/dget_tv"
                android:textColor="@color/public_orange"
                android:text="元"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/expired_time_tv"
                android:layout_below="@+id/dget_tv"
                android:textColor="#ababab"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/check_task_btn"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:text="打开应用"
                android:background="@drawable/public_button_orange"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_width="72.5dp"
                android:layout_height="25dp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@null"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/newyear_red_packet_rains"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/newyear_light_bg_iv_lay">
        <ImageView
            android:layout_width="345dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="107.5dp"
            android:id="@+id/newyear_light_bg_iv"
            android:background="@mipmap/newyear_light"
            android:layout_height="345dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/newyear_red_unopened_bg"
        android:id="@+id/red_packet_lay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_height="300dp">
        <Button
            android:id="@+id/i_know_tv"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="181dp"
            android:background="@mipmap/newyear_red_unopened_btn"
            android:gravity="center" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="gone"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerInParent="true" />

</RelativeLayout>
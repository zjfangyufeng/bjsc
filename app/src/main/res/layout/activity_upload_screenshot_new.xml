<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/maintab_activity_head_lay"
        android:layout_width="fill_parent"
        android:background="@color/public_orange"
        android:paddingLeft="8dp"
        android:paddingRight="15dp"
        android:layout_height="47.5dp" >

        <ImageView
            android:id="@+id/maintab_activity_head_left_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@mipmap/public_return" />

        <TextView
            android:id="@+id/maintab_activity_head_middle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="上传截图"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="18dp" />
    </RelativeLayout>
    <ScrollView
        android:background="@color/pale_white"
        android:scrollbars="none"
        android:layout_below="@+id/maintab_activity_head_lay"
        android:layout_above="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_extra_param"
                android:visibility="gone"
                android:orientation="vertical"
                android:background="@color/pure_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@mipmap/public_line_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1px"></View>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_height="40dp">
                    <TextView
                        android:text="填写以下信息"
                        android:textColor="#666666"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <TextView
                        android:text="(*必填)"
                        android:textColor="@color/public_red_orange"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_game_account"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@mipmap/public_line_middle"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_height="50dp">
                        <TextView
                            android:text="游戏账户："
                            android:textColor="#888888"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                        <EditText
                            android:id="@+id/et_game_account"
                            android:hint="输入游戏账户名称"
                            android:textColorHint="#cecece"
                            android:focusable="true"
                            android:background="@null"
                            android:textColor="#555555"
                            android:textSize="14dp"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_game_id"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@mipmap/public_line_middle"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_height="50dp">
                        <TextView
                            android:text="游戏ID号："
                            android:textColor="#888888"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                        <EditText
                            android:id="@+id/et_game_id"
                            android:hint="输入游戏ID号"
                            android:focusable="true"
                            android:textColorHint="#cecece"
                            android:textColor="#555555"
                            android:background="@null"
                            android:textSize="14dp"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_mobile_id"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@mipmap/public_line_middle"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_height="50dp">
                        <TextView
                            android:text="注册手机号："
                            android:textColor="#888888"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                        <EditText
                            android:id="@+id/et_mobile_id"
                            android:hint="输入注册手机号"
                            android:textColorHint="#cecece"
                            android:focusable="true"
                            android:textColor="#555555"
                            android:background="@null"
                            android:textSize="14dp"
                            android:maxLines="1"
                            android:maxLength="11"
                            android:inputType="number"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_game_order_number"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@mipmap/public_line_middle"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_height="50dp">
                        <TextView
                            android:text="充值订单号："
                            android:textColor="#888888"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                        <EditText
                            android:id="@+id/et_game_order_number"
                            android:hint="输入充值订单号"
                            android:textColorHint="#cecece"
                            android:focusable="true"
                            android:textColor="#555555"
                            android:background="@null"
                            android:textSize="14dp"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@mipmap/public_line_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1px"></View>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_container"
                android:orientation="vertical"
                android:background="#ffffff"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:orientation="vertical"
        android:background="#f2f2f2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <View
            android:background="@mipmap/public_line_side"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"></View>
        <Button
            android:id="@+id/submit_btn"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/public_button_orange"
            android:text="上传提交"
            android:layout_gravity="center"
            android:layout_width="310dp"
            android:layout_height="42dp" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"></View>
    </LinearLayout>
</RelativeLayout>
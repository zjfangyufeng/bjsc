<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/maintab_activity_head_lay"
        android:layout_width="fill_parent"
        android:background="@color/public_orange"
        android:paddingLeft="8dp"
        android:paddingRight="15dp"
        android:layout_height="47.5dp" >

        <ImageView
            android:id="@+id/maintab_activity_head_left_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@mipmap/public_return" />

        <TextView
            android:id="@+id/maintab_activity_head_middle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="上传截图"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="18dp" />
    </RelativeLayout>
    <ScrollView
        android:background="@color/pale_white"
        android:scrollbars="none"
        android:layout_below="@+id/maintab_activity_head_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/screenshot_samples_tv"
                        android:text="任务截图范例"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:textColor="#666666"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/btn_task_request"
                        android:text="任务要求"
                        android:textColor="#999999"
                        android:paddingTop="8dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="13dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <ImageView
                        android:src="@mipmap/public_screen_example_arrow"
                        android:layout_marginRight="15dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                </LinearLayout>
                <View
                    android:background="@mipmap/public_line_middle"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"></View>
                <HorizontalScrollView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/screenshot_samples_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </HorizontalScrollView>
                <View
                    android:background="@mipmap/public_line_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1px"></View>
            </LinearLayout>

            <LinearLayout
                android:background="#ffffff"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@mipmap/public_line_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1px"></View>
                <TextView
                    android:text="上传截图"
                    android:layout_marginLeft="20dp"
                    android:textColor="#666666"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
                <View
                    android:background="@mipmap/public_line_middle"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"></View>
                <LinearLayout
                    android:id="@+id/pick_pic_lay"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <View
                    android:background="@mipmap/public_line_middle"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"></View>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_extra_param"
                android:visibility="gone"
                android:orientation="vertical"
                android:background="@color/pure_white"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="@mipmap/public_line_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1px"></View>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:layout_height="40dp">
                    <TextView
                        android:text="填写以下信息"
                        android:textColor="#666666"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <TextView
                        android:text="(*必填)"
                        android:textColor="@color/public_red_orange"
                        android:textSize="14dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_game_account"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@mipmap/public_line_middle"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_height="50dp">
                        <TextView
                            android:text="游戏账户："
                            android:textColor="#888888"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                        <EditText
                            android:id="@+id/et_game_account"
                            android:hint="输入游戏账户名称"
                            android:textColorHint="#cecece"
                            android:background="@null"
                            android:textColor="#555555"
                            android:textSize="14dp"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_game_id"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@mipmap/public_line_middle"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_height="50dp">
                        <TextView
                            android:text="游戏ID号："
                            android:textColor="#888888"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                        <EditText
                            android:id="@+id/et_game_id"
                            android:hint="输入游戏ID号"
                            android:textColorHint="#cecece"
                            android:textColor="#555555"
                            android:background="@null"
                            android:textSize="14dp"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_game_order_number"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@mipmap/public_line_middle"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:layout_height="50dp">
                        <TextView
                            android:text="充值订单号："
                            android:textColor="#888888"
                            android:textSize="14dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                        <EditText
                            android:id="@+id/et_game_order_number"
                            android:hint="输入充值订单号"
                            android:textColorHint="#cecece"
                            android:textColor="#555555"
                            android:background="@null"
                            android:textSize="14dp"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:background="@mipmap/public_line_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1px"></View>
            </LinearLayout>
            <TextView
                android:id="@+id/upload_hint_tv"
                android:text="请上传"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/public_red_orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/submit_btn"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:layout_marginTop="15dp"
                android:background="@drawable/public_button_orange"
                android:text="上传提交"
                android:layout_gravity="center"
                android:layout_width="310dp"
                android:layout_height="42dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f4f4f4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/maintab_activity_head_lay"
        android:layout_width="fill_parent"
        android:background="@color/public_orange"
        android:paddingLeft="8dp"
        android:paddingRight="20dp"
        android:layout_height="47.5dp" >
        <ImageView
            android:id="@+id/maintab_activity_head_left_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@mipmap/public_return" />
        <TextView
            android:id="@+id/maintab_activity_head_middle"
            android:text="已领取红包"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="18dp" />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/maintab_activity_head_lay"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="170dp">
                <View
                    android:background="@mipmap/daily_reward_list_bg"
                    android:layout_width="match_parent"
                    android:layout_height="136dp"></View>
                <View
                    android:background="@mipmap/daily_reward_icon"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="75dp"
                    android:layout_height="75dp"></View>
                <TextView
                    android:id="@+id/tv_top"
                    android:text="连续打卡3天就能领取红包哦!~"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:layout_marginTop="57dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:paddingTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_reward"
                    android:text="0.15"
                    android:textSize="60dp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="元"
                    android:textSize="13dp"
                    android:textColor="#333333"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:text="您已领取福彩3D的红包"
                android:gravity="center_horizontal"
                android:textSize="18dp"
                android:background="#ffffff"
                android:textColor="#fb5e28"
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="已存入您的福彩3D账户 可随时提现"
                android:textSize="12dp"
                android:background="#ffffff"
                android:gravity="center"
                android:textColor="#999999"
                android:paddingTop="7dp"
                android:paddingBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/layout_red_package_progress_bar"
                android:visibility="gone"
                android:background="#ffffff"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:background="@drawable/red_package_progress_bg"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_symbol1"
                        android:textColor="@color/public_orange"
                        android:text="目前完成任务进度"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.ddfun.customerview.RedPackageProgressBarView
                        android:id="@+id/red_package_progress_bar"
                        android:layout_below="@+id/tv_symbol1"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </com.ddfun.customerview.RedPackageProgressBarView>
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:text="其他用户抢到的红包"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:textColor="#666666"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>




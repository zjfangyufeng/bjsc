<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/public_pop_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="37.5dp"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/public_pop_screen_submit"
            android:layout_width="100dp"
            android:layout_height="80dp" />
        <TextView
            android:id="@+id/tv_main"
            android:text="提交成功"
            android:textColor="@color/public_orange"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sub"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:text="赶紧去看看新任务把"
            android:textColor="#888888"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="@mipmap/public_line_middle"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <TextView
            android:id="@+id/btn_commit"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/public_orange"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
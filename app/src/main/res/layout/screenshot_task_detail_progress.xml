<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="55dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <View
            android:id="@+id/v1"
            android:background="@drawable/screenshot_task_detail_progress_1_selector"
            android:layout_width="90dp"
            android:layout_height="15dp"></View>
        <TextView
            android:id="@+id/tv1"
            android:textColor="@drawable/screenshot_task_detail_progress_text_selector"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="领取任务"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <View
            android:id="@+id/v2"
            android:background="@drawable/screenshot_task_detail_progress_2_selector"
            android:layout_width="90dp"
            android:layout_height="15dp"></View>
        <TextView
            android:id="@+id/tv2"
            android:textColor="@drawable/screenshot_task_detail_progress_text_selector"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="做任务"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <View
            android:id="@+id/v3"
            android:background="@drawable/screenshot_task_detail_progress_2_selector"
            android:layout_width="90dp"
            android:layout_height="15dp"></View>
        <TextView
            android:id="@+id/tv3"
            android:textColor="@drawable/screenshot_task_detail_progress_text_selector"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="上传截图"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <View
            android:id="@+id/v4"
            android:background="@drawable/screenshot_task_detail_progress_4_selector"
            android:layout_width="90dp"
            android:layout_height="15dp"></View>
        <TextView
            android:id="@+id/tv4"
            android:textColor="@drawable/screenshot_task_detail_progress_text_selector"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="待审核"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
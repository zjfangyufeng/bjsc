<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:background="@mipmap/public_pop_answer_apptext_left"
            android:layout_width="55dp"
            android:layout_height="4dp"></View>
        <TextView
            android:id="@+id/tv_name"
            android:text="巴拉巴拉吧"
            android:textSize="16dp"
            android:textColor="#383838"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="@mipmap/public_pop_answer_apptext_right"
            android:layout_width="55dp"
            android:layout_height="4dp"></View>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_reward"
        android:text="试玩任务总奖励"
        android:textSize="15dp"
        android:textColor="#999999"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv"
        android:divider="@null"
        android:listSelector="#00000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <ImageView
        android:id="@+id/btn_close"
        android:src="@mipmap/public_pop_answer_apptext_close"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="30dp"
        android:layout_width="45dp"
        android:layout_height="45dp" />
</LinearLayout>

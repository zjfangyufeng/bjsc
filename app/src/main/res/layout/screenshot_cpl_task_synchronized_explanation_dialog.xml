<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/public_pop_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="暂未同步账号"
            android:textSize="17dp"
            android:textColor="@color/public_orange"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="55dp" />
        <View
            android:background="@mipmap/public_line_middle"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/public_orange"
                android:layout_marginRight="10dp"
                android:layout_width="5px"
                android:layout_height="13dp"></View>
            <TextView
                android:text="手机号输入一致"
                android:textSize="13dp"
                android:textColor="@color/public_orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginRight="10dp"
                android:layout_width="5px"
                android:layout_height="7dp"></View>
            <TextView
                android:text="任务页面的手机号与游戏注册/绑定手机号一致,请试玩几分钟再刷新同步账号.数据回调偶有延迟。"
                android:lineSpacingExtra="8dp"
                android:textSize="13dp"
                android:textColor="#666666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/public_orange"
                android:layout_marginRight="10dp"
                android:layout_width="5px"
                android:layout_height="13dp"></View>
            <TextView
                android:text="手机号输入不一致"
                android:textSize="13dp"
                android:textColor="@color/public_orange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginRight="10dp"
                android:layout_width="5px"
                android:layout_height="7dp"></View>
            <TextView
                android:text="任务页面的手机号与游戏注册/绑定手机号不一致,无法同步账号数据,请在线联系客服修改。"
                android:lineSpacingExtra="8dp"
                android:textSize="13dp"
                android:textColor="#666666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@mipmap/public_line_middle"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <TextView
            android:id="@+id/btn_confirm"
            android:text="我知道了"
            android:textSize="15dp"
            android:textColor="@color/public_orange"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
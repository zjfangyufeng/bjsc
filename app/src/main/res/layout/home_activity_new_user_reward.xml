<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/guide_pop_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/redcash_pop_index_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="恭喜您!"
            android:layout_marginTop="35dp"
            android:textColor="#ffee50"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_reward"
            android:text="获得3元提现红包券"
            android:textSize="20dp"
            android:textColor="@color/pure_white"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:background="@mipmap/redcash_pop_index_line"
                android:layout_centerInParent="true"
                android:layout_width="185dp"
                android:layout_height="1px"></View>
            <TextView
                android:text="请在[更多]页查看提现红包券"
                android:textSize="12dp"
                android:textColor="#ffc8c2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:background="@mipmap/redcash_pop_03"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        <ImageView
            android:id="@+id/iv_reward_2CNY"
            android:background="@mipmap/redcash_pop_index_02"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        <TextView
            android:text="再赚7元可使用红包券提现,去赚钱吧"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:textColor="#ffee50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/iv"
            android:background="@mipmap/redcash_pop_index_btn"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_width="135dp"
            android:layout_height="35dp" />
    </LinearLayout>
</LinearLayout>
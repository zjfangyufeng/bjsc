<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@null"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/newyear_light_bg_iv_lay">
        <ImageView
            android:layout_width="345dp"
            android:layout_height="345dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="111dp"
            android:id="@+id/newyear_light_bg_iv"
            android:background="@mipmap/newyear_light" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/opened_red_packet_lay"
        android:layout_width="240dp"
        android:layout_height="347dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:background="@mipmap/newyear_red_opened_bg"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/red_packet_money_lay"
            android:layout_marginTop="86dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/red_packet_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="1.18"
                android:textColor="#dc432f"
                android:textSize="43dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="-14dp"
                android:text="元"
                android:textColor="#dc432f"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/red_packet_blessing_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/red_packet_money_lay"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="祝您猴年大吉！"
            android:textColor="#ef6e55"
            android:textSize="11dp" />

        <Button
            android:id="@+id/i_know_tv"
            android:layout_width="130dp"
            android:layout_height="135dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/hint"
            android:background="@mipmap/newyear_red_opened_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_centerHorizontal="true"
            android:id="@+id/hint"
            android:text="压岁钱已经发放到您的账户"
            android:layout_alignBottom="@+id/detail_lay"
            android:textColor="#fffbd9"
            android:textSize="9dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_lay"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请到"
                android:textColor="#fff6d9"
                android:textSize="9dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="“更多->收入明细->活动收入”"
                android:textColor="#feda5f"
                android:textSize="9dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内查看"
                android:textColor="#fffbd9"
                android:textSize="9dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
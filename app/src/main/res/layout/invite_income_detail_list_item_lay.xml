<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:paddingLeft="25dp"
    android:paddingRight="35dp"
    android:minHeight="60dp"
    android:layout_height="60dp">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/source_iv"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/be_mobile_tv"
            android:layout_toRightOf="@+id/source_iv"
            android:text="0.00"
            android:textSize="15dp"
            android:layout_marginBottom="4dp"
            android:textColor="#555555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date_tv"
            android:layout_toRightOf="@+id/source_iv"
            android:layout_below="@+id/be_mobile_tv"
            android:text="0.00"
            android:textSize="12dp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/income_lay"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="right"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:text="+"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/income_tv"
                    android:text="0.00"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="元"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_pending_reward"
                android:layout_gravity="right"
                android:visibility="gone"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:textColor="#ababab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/todo_info_tv"
            android:textSize="13dp"
            android:textColor="@color/public_orange"
            android:text="待完成答题任务"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/close_icon1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/public_pop_close"
            android:layout_width="44dp"
            android:layout_height="44dp" />
        <TextView
            android:text="确认购买信息"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#383838"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <View
        android:background="@mipmap/public_line_middle"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textColor="#666666"
            android:textSize="14dp"
            android:text="价格"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="￥"
            android:textColor="@color/public_orange"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/newprice_tv"
            android:textColor="@color/public_orange"
            android:textSize="18dp"
            android:text="2.00"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:background="@mipmap/public_line_middle"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textColor="#666666"
            android:textSize="14dp"
            android:text="数量"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="1个"
            android:textColor="#666666"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:background="@mipmap/public_line_middle"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:textColor="#666666"
            android:textSize="14dp"
            android:text="余额"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="￥"
            android:textColor="@color/public_orange"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/balance_tv"
            android:textColor="@color/public_orange"
            android:textSize="18dp"
            android:text="2.00"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:background="@mipmap/public_line_middle"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>
    <LinearLayout
        android:id="@+id/layout_withdraw_password"
        android:visibility="gone"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="17.5dp"
            android:layout_marginRight="17.5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:textColor="#666666"
                android:textSize="14dp"
                android:text="收货地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@null"
                android:id="@+id/receive_address_et"
                android:hint="选择收货地址"
                android:gravity="right"
                android:singleLine="true"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:focusable="false"
                android:textColorHint="#ababab"
                android:textColor="#ababab"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@mipmap/public_unfold"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>
        <View
            android:layout_marginLeft="17.5dp"
            android:layout_marginRight="17.5dp"
            android:background="@mipmap/public_line_middle"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/alipay_account_lay"
        android:visibility="gone"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="17.5dp"
            android:layout_marginRight="17.5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:textColor="#666666"
                android:textSize="14dp"
                android:text="支付宝账号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@null"
                android:id="@+id/alipay_account_et"
                android:hint="添加支付宝"
                android:gravity="right"
                android:cursorVisible="false"
                android:focusable="false"
                android:textColorHint="#ababab"
                android:textColor="#ababab"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@mipmap/public_unfold"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>
        <View
            android:layout_marginLeft="17.5dp"
            android:layout_marginRight="17.5dp"
            android:background="@mipmap/public_line_middle"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_wx_account"
        android:visibility="gone"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="17.5dp"
            android:layout_marginRight="17.5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:textColor="#666666"
                android:textSize="14dp"
                android:text="银行卡号"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@null"
                android:id="@+id/bank_account_et"
                android:hint="添加银行卡"
                android:gravity="right"
                android:cursorVisible="false"
                android:focusable="false"
                android:textColorHint="#ababab"
                android:textColor="#ababab"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@mipmap/public_unfold"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>
        <View
            android:layout_marginLeft="17.5dp"
            android:layout_marginRight="17.5dp"
            android:background="@mipmap/public_line_middle"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
    </LinearLayout>
    <EditText
        android:id="@+id/message_et"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:hint="填写备注留言"
        android:textSize="14dp"
        android:maxLength="100"
        android:background="@drawable/public_button_gray_little"
        android:layout_width="match_parent"
        android:layout_height="42dp" />

    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"></View>

    <Button
        android:id="@+id/submit_order_btn"
        android:text="提交订单"
        android:textColor="#ffffff"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/public_button_orange"
        android:layout_width="match_parent"
        android:layout_height="42.5dp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/head_lay"
            android:orientation="vertical"
            android:fitsSystemWindows="true"
            android:background="@color/public_orange"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="15dp"
                android:layout_height="47.5dp" >
                <ImageView
                    android:id="@+id/maintab_activity_head_left_btn"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:clickable="true"
                    android:src="@mipmap/public_close" />
                <TextView
                    android:id="@+id/maintab_activity_head_middle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:text="答题奖励"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />
                <LinearLayout
                    android:id="@+id/answer_rule_lay"
                    android:clickable="true"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="44dp"
                        android:src="@mipmap/draw_answer_rule" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="奖励规则"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/draw_answer_result_topbg"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="165dp">
                <TextView
                    android:id="@+id/reward_money_tv"
                    android:text="+0.65元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:textColor="#fc6e51"
                    android:textSize="30dp" />
                <TextView
                    android:text="第1天答题任务已完成"
                    android:id="@+id/des_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#fc6e51"
                    android:textSize="15dp" />
                <TextView
                    android:text="试玩期间，卸载应用，将无法获得奖励"
                    android:id="@+id/pending_reward_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="12dp"
                    android:textColor="#fc6e51" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="140dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.ddfun.customerview.RoundCornerImageViewFixXY
                    android:id="@+id/app_logo_iv"
                    android:scaleType="fitXY"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:background="@mipmap/public_pop_answer_apptext_left"
                        android:layout_width="55dp"
                        android:layout_height="4dp"></View>
                    <TextView
                        android:id="@+id/tv_name"
                        android:text="试玩流程"
                        android:textSize="15dp"
                        android:textColor="#555555"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:background="@mipmap/public_pop_answer_apptext_right"
                        android:layout_width="55dp"
                        android:layout_height="4dp"></View>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <com.ddfun.customerview.ListViewForScrollView
            android:id="@+id/lv"
            android:scrollbars="none"
            android:divider="@null"
            android:listSelector="#00000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.ddfun.customerview.ListViewForScrollView>
        <include layout="@layout/screen_shot_coupon_lay_lately"></include>
    </LinearLayout>
</ScrollView>
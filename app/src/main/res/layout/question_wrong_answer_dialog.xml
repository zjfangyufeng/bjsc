<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@null"
    android:layout_height="270dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:background="@null"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/exit"
            android:clickable="true"
            android:layout_width="44dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:src="@mipmap/pop_account_close"/>

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/public_pop_bg"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="90dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/draw_pop_wrong"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="10dp"
                android:textSize="15dp"
                android:textColor="#888888"
                android:id="@+id/hint_text"
                android:text="亲爱的，答错了，答案就在百度新闻中心APP里，要认真体验哦！" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingExtra="10dp"
                android:textSize="12dp"
                android:textColor="#fc6e51"
                android:id="@+id/chance_times_tv" />

            <View
                android:layout_width="match_parent"
                android:background="@mipmap/public_line_middle"
                android:layout_height="1px">
            </View>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/ok_btn"
                    android:textColor="@color/public_orange"
                    android:textSize="18dp"
                    android:text="寻找答案"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
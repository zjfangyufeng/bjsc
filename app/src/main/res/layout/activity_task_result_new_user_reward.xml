<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/guide_pop_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@mipmap/guide_answer_finsh"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="105dp"
        android:layout_width="353dp"
        android:layout_height="345dp">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_reward"
                android:text="+0.35元"
                android:textColor="@color/public_red_orange"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="恭喜您完成一个答题任务,"
                android:textColor="#999999"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="获得答题奖励"
                android:textColor="#999999"
                android:textSize="12dp"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/btn"
                android:background="@mipmap/guide_answer_finsh_btn"
                android:layout_marginTop="15dp"
                android:layout_width="135dp"
                android:layout_height="30dp" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:text="可后续7天持续做该任务获得更多奖励"
        android:textColor="#fff05b"
        android:textSize="12dp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="PS:试玩期间卸载应用将无法获得后续奖励"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <View
                android:id="@+id/btn_close"
                android:layout_centerVertical="true"
                android:background="@mipmap/public_pop_close"
                android:layout_width="44dp"
                android:layout_height="44dp"></View>
            <TextView
                android:text="添加北京赛车PK10计划公众号"
                android:textColor="#383838"
                android:textSize="16dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@mipmap/public_line_side"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <ImageView
            android:src="@mipmap/helpcenter_weixin"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="18dp"
            android:id="@+id/iv_qr_code"
            android:scaleType="fitXY"
            android:layout_width="142dp"
            android:layout_height="142dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="将二维码截图保存到手机,使用"
                android:textSize="12dp"
                android:textColor="#555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="微信扫一扫"
                android:textSize="12dp"
                android:textColor="@color/public_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="功能添加"
                android:textSize="12dp"
                android:textColor="#555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_open_wx"
            android:background="@mipmap/wechat_bg"
            android:orientation="horizontal"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_width="206dp"
            android:layout_height="33dp">
            <View
                android:background="@mipmap/wechat_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"></View>
            <TextView
                android:text="打开微信"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
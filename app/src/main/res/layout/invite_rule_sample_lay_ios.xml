<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/public_pop_bg"
        android:layout_marginTop="45dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13dp"
            android:textColor="#888888"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="35dp"
            android:text="如果您的好友做了15个任务，6-15个任务的收入是20元。您可获："
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_invite_money"
                android:text="5"
                android:textSize="25dp"
                android:textColor="@color/public_red_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="  +  "
                android:layout_gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="20"
                android:textSize="25dp"
                android:textColor="@color/public_red_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="x50%  "
                android:layout_gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="@color/public_red_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="=  "
                android:layout_gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="15"
                android:textSize="25dp"
                android:textColor="@color/public_red_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:background="@drawable/invite_pop_rule_bg_org"
            android:layout_width="match_parent"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv_invite_money2"
                android:text="5"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:layout_marginRight="1dp"
                android:textColor="@color/public_red_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="元"
                android:layout_toRightOf="@+id/tv_invite_money2"
                android:layout_alignBaseline="@+id/tv_invite_money2"
                android:textSize="10dp"
                android:textColor="@color/public_red_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="好友完成前5个任务奖励"
                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/invite_pop_rule_bg_org"
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/tv2"
                android:text="20"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:layout_marginRight="1dp"
                android:textColor="@color/public_red_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="x50%元"
                android:layout_toRightOf="@+id/tv2"
                android:layout_alignBaseline="@+id/tv2"
                android:textSize="10dp"
                android:textColor="@color/public_red_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="第6个任务起好友任务提成"
                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn"
            android:text="知道了"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:background="@drawable/public_button_orange"
            android:layout_marginTop="22dp"
            android:layout_width="230dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <ImageView
        android:src="@mipmap/invite_pop_rule_top"
        android:layout_gravity="center_horizontal"
        android:layout_width="210dp"
        android:layout_height="60dp" />
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_received"
            android:background="@mipmap/screen_info_receive"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:layout_marginTop="8dp"
            android:layout_width="56dp"
            android:layout_height="56dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_serial_number"
                android:text="1"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginRight="8dp"
                android:background="@drawable/public_user_task_btn_yellow"
                android:layout_width="16dp"
                android:layout_height="16dp"></TextView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:text="爱的色放阿萨德发阿萨德发阿萨德发萨德发"
                    android:textSize="13dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#555555"
                    android:layout_marginRight="80dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/tv_sub_title"
                    android:text="阿萨德发萨德发"
                    android:textSize="12dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#ababab"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_reward"
                android:text="+0.00元"
                android:textSize="15dp"
                android:textColor="@color/public_orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </FrameLayout>
    <View
        android:background="@mipmap/public_line_middle"
        android:layout_width="match_parent"
        android:layout_height="1px"></View>
</LinearLayout>
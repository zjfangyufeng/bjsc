<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <View
                android:id="@+id/btn_close"
                android:layout_centerVertical="true"
                android:background="@mipmap/public_pop_close"
                android:layout_width="44dp"
                android:layout_height="44dp"></View>
            <TextView
                android:text="联系QQ客服"
                android:textColor="#383838"
                android:textSize="16dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@mipmap/public_line_side"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <LinearLayout
            android:id="@+id/btn_official1"
            android:background="@drawable/service_pop_icon_bg"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="35dp">
            <View
                android:background="@mipmap/ico_contact_qq"
                android:layout_width="25dp"
                android:layout_height="25dp"></View>
            <TextView
                android:text="QQ客服1"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_official2"
            android:background="@drawable/service_pop_icon_bg"
            android:orientation="horizontal"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="35dp">
            <View
                android:background="@mipmap/ico_contact_qq"
                android:layout_width="25dp"
                android:layout_height="25dp"></View>
            <TextView
                android:text="QQ客服2"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="工作时间(周一至周五9:00-18:00)"
            android:textColor="#555555"
            android:textSize="12dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
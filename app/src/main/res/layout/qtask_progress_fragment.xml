<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:scrollbars="none"
        android:layout_below="@+id/maintab_activity_head_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@drawable/public_pop_bg"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:text="已错过奖励"
                        android:textColor="#555555"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/missed_reward_tv"
                        android:layout_alignParentRight="true"
                        android:textColor="#ababab"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <View
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@mipmap/draw_answer_finish_axis_xian"
                    android:layout_width="match_parent"
                    android:layout_height="1px">
                </View>

                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:text="已获得奖励"
                        android:textColor="#555555"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/got_reward_tv"
                        android:layout_alignParentRight="true"
                        android:textColor="#ababab"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.ddfun.customerview.ListViewForScrollView
                    android:id="@+id/list"
                    android:background="@drawable/public_pop_bg"
                    android:scrollbars="none"
                    android:divider="@null"
                    android:clickable="false"
                    android:cacheColorHint="#00000000"
                    android:listSelector="@drawable/list_no_change_selector"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="-1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                </com.ddfun.customerview.ListViewForScrollView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
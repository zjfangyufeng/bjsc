<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent">
    <ImageView
        android:src="@mipmap/guide_up_down_end"
        android:layout_above="@+id/novice_step4_lockscreen_btn"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ff"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:alpha="0.7"
        android:layout_centerInParent="true"
        android:text="恭喜您!完成了新手教程!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/novice_step4_lockscreen_btn"
        android:background="@drawable/public_pop_button_orange"
        android:layout_below="@+id/ff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:text="马上锁屏赚钱"
        android:layout_width="180dp"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/novice_step4_success_btn"
        android:background="@drawable/public_pop_button_orange_air"
        android:layout_below="@+id/novice_step4_lockscreen_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/public_orange"
        android:textSize="17dp"
        android:text="结束新手教程"
        android:layout_width="180dp"
        android:layout_height="40dp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_tv"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:textSize="18dp"
        android:textColor="#fe8417"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/reward_tv"
        android:layout_marginTop="7dp"
        android:textSize="32.5dp"
        android:textColor="#fc6e51"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="@mipmap/user_task_info_con_split"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/iv"
            android:background="@mipmap/user_task_info_con_tomorrow_icon"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/preview_lay"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <LinearLayout
            android:id="@+id/preview_lay"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/preview_time_tv"
                android:textSize="13dp"
                android:textColor="#2bc6b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/preview_reward_hint_tv"
                android:textSize="13dp"
                android:textColor="#ababab"
                android:text="完成明日任务将会获得"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/preview_reward_tv"
            android:layout_toRightOf="@+id/preview_lay"
            android:layout_alignBottom="@+id/preview_lay"
            android:layout_marginTop="5dp"
            android:textSize="13dp"
            android:textColor="#fc6e51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
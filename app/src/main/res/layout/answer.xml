<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/answer_lay"
    android:background="@drawable/draw_answer_list_bg_normal"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/draw_answer_list_no_normal"
        android:layout_marginLeft="7.5dp"
        android:id="@+id/question_answer_no_tv"
        android:gravity="center"
        android:text="C"
        android:textColor="@color/question_option_color"
        android:textSize="@dimen/question_option_size" />

    <TextView
        android:id="@+id/question_answer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingRight="7.5dp"
        android:text="属于你的智能新闻，互动分享和个性化定制阅读软件"
        android:textColor="@color/question_answer_color"
        android:textSize="@dimen/question_answer_size" />

</LinearLayout>
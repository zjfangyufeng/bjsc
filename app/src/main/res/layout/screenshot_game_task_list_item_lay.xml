<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ddfun.customerview.RoundCornerImageView
            android:id="@+id/icon_iv"
            android:scaleType="fitXY"
            android:layout_marginRight="19dp"
            android:layout_marginTop="3dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_tv"
                android:text="demo name"
                android:textColor="#383838"
                android:layout_toLeftOf="@+id/newprice_tv"
                android:layout_marginBottom="3dp"
                android:maxLines="1"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/layout"
                android:layout_below="@+id/name_tv"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layout_lightning_check"
                    android:orientation="horizontal"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:background="@drawable/public_screen_list_corner_green"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="63dp"
                    android:layout_height="15dp" >
                    <View
                        android:background="@mipmap/game_list_jssh_mark_box"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                    <TextView
                        android:text="极速审核"
                        android:textColor="#2bc6b6"
                        android:maxLines="1"
                        android:textSize="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_immediately_cash_back"
                    android:orientation="horizontal"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:background="@drawable/public_screen_list_corner"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="63dp"
                    android:layout_height="15dp" >
                    <View
                        android:background="@mipmap/game_list_ssfx_mark_box"
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                    <TextView
                        android:text="实时返现"
                        android:textColor="@color/public_orange"
                        android:maxLines="1"
                        android:textSize="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_top_up_return"
                    android:gravity="center"
                    android:background="@drawable/public_screen_list_corner"
                    android:text="充值返现"
                    android:textColor="@color/public_orange"
                    android:maxLines="1"
                    android:textSize="11dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="55dp"
                    android:layout_height="15dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/title_tv"
                android:layout_below="@+id/layout"
                android:textColor="#ababab"
                android:text="阿福"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/operation_request_short_tv"
                android:layout_below="@+id/title_tv"
                android:textColor="#ababab"
                android:text="审核中"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/task_remain_tv"
                android:layout_below="@+id/title_tv"
                android:layout_toRightOf="@+id/operation_request_short_tv"
                android:text="剩余255fen"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/no_remain_iv"
            android:src="@mipmap/screen_list_loot"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/btn_lay"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.ddfun.customerview.CountDownTextView
                android:id="@+id/expire_time_tv"
                android:text="00:00:00"
                android:textColor="#2bc6b6"
                android:textSize="12dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/btn"
                android:layout_gravity="right"
                android:text="1.00元"
                android:textSize="12dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_width="77dp"
                android:layout_height="25dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="270dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:background="@drawable/public_pop_bg"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="85dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/draw_pop_chance"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:lineSpacingExtra="10dp"
            android:textSize="15dp"
            android:textColor="#888888"
            android:id="@+id/hint_text"
            android:text="很遗憾，答题超时，您可以前往锁屏试试别的奖励任务，再接再厉~~ " />

        <View
            android:layout_width="match_parent"
            android:background="@mipmap/public_line_middle"
            android:layout_marginTop="15dp"
            android:layout_height="1px">
        </View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/ok_btn"
                android:textColor="@color/public_orange"
                android:textSize="18dp"
                android:text="好的"
                android:clickable="true"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>